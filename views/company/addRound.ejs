    </div>




    <section class="">
        <div class="px-4 py-5 px-md-5  text-lg-start" >
          <div class="container">
          
      
              
                <div class="card">
                  
                    <form action="/company/<%=id%>" method="POST" >
                        <div class="card-body">   
                      
                    <div class="row">
    
                      <div class="form-outline mb-4 col-12">          
    
